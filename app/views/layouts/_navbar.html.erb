<header class="mb-4">
  <nav class="navbar navbar-expand-sm sticky-top navbar-light bg-info">
    <div class="container-fluid ps-5 pe-5">
      <%= link_to "Travelocal", root_path, class:"navbar-brand" %><i class="fas fa-globe-asia"></i>
      
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
        <span class="navbar-toggler-icon"></span>
      </button>
    
      <% if logged_in? %>
        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item"><%= link_to 'HOME', followings_post_path(current_user), class: 'nav-link' %></li>
            <li class="nav-item"><%= link_to 'Post', new_post_path, class: 'nav-link' %></li>
            <li class="nav-item"><%= link_to 'Favorites', likes_user_path(current_user), class: 'nav-link' %></li>
            
            <li class="nav-item dropdown">
              <span class="nav-link dropdown-toggle text-decolation-none" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="far fa-user"></i>
              </span>
              <ul class="dropdown-menu text-decolation-none">
                <li class="dropdown-item"><%= link_to "My profile", user_path(current_user), class:"text-decolation-none", data: {"turbolinks"=>false} %></li>
                <li class="dropdown-item"><%= link_to "Followings", followings_user_path(current_user), class:"text-decolation-none", data: {"turbolinks"=>false} %></li>
                <li class="dropdown-item"><%= link_to "Followers", followers_user_path(current_user), class:"text-decolation-none", data: {"turbolinks"=>false} %></li>
                <li class="dropdown-divider"></li>
                <li class="dropdown-item"><%= link_to "Logout", logout_path, method: :delete, class:"text-decolation-none", data: {"turbolinks"=>false} %></li>
              </ul>
            </li>
          </ul>
        </div>
        
      <% else %>
        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to "Signup", signup_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Login", login_path, class: "nav-link" %>
            </li>
          </ul>
        </div>
      <% end %>
    </div>
  </nav>
</header>