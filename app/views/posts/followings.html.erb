<div>
  <h2 class="text-center">Profile</h2>
  <div class="row">
    <div class="card col-sm-5 text-center mx-auto">
      <div class="card-header">
        <h2><%= @user.name %></h2>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-sm-3">
            <img class="rounded me-2 mb-5 mt-4 " src="<%= gravatar_url(@user, {size: 100}) %>" alt="">
          </div>
          <div class="col-sm-9 mt-4">
            <% if @post.user.birthday? %>
              <p class="card-text">Age:<%= (DateTime.now.to_i - @post.user.birthday.to_i)  / (86400* 365) %>
              </p>
            <% else %>
              <p class="card-text">Age: None</p>
            <% end %>
            <p class="card-text">City:<%= @user.city %></p>
            <% if current_user == @user %>
              <%= link_to "Edit", edit_user_path(@user), class: 'btn btn-outline-warning' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



<div class="mt-3">
  <h2 class="text-center">POSTS OF FOLLOWINGS</h2>
  <%= render "posts/index" %>
</div>